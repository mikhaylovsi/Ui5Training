<mvc:View
  controllerName="view.TrainingCourseDetail"
  xmlns:l="sap.ui.layout"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
    <Page
    title="{i18n>Courses}">
    <headerContent>
    </headerContent>
    <subHeader>
    </subHeader>
    <content>
  <Table id="idProductsTable"
    inset="false"
    items="{
      path: '/Courses',
      sorter: {
        path: 'DateStart'
      }
    }">
    <columns>
      <Column
        width="12em">
        <Text text="{i18n>Name}" />
      </Column>
      <Column
        minScreenWidth="Tablet"
        demandPopin="true">
        <Text text="{i18n>Duration}" />
      </Column>
      <Column
        minScreenWidth="Tablet"
        demandPopin="true"
        hAlign="Right">
        <Text text="{i18n>Level}" />
      </Column>
      <Column
        minScreenWidth="Tablet"
        demandPopin="true"
        hAlign="Center">
        <Text text="{i18n>HasExercise}" />
      </Column>
      <Column
        hAlign="Right">
        <Text text="{i18n>Teacher}" />
      </Column>
      <Column
        hAlign="Right">
        <Text text="{i18n>Product}" />
      </Column>
      <Column
        hAlign="Right">
        <Text text="{i18n>Name}" />
      </Column>
    </columns>
    <items>
      <ColumnListItem>
        <cells>
          <ObjectIdentifier
            title="{Name}"
            text="{ProductId}"
            class="sapMTableContentMargin" />
          <Text
            text="{SupplierName}" />
          <Text
            text="{Width} x {Depth} x {Height} {DimUnit}" />
          <ObjectNumber
            number="{WeightMeasure}"
            unit="{WeightUnit}"
            state="{
              path: 'WeightMeasure',
              formatter: 'sap.m.sample.Table.Formatter.weightState'
            }" />
          <ObjectNumber
          number="{Price}"
          unit="{CurrencyCode}" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>
      </content>
    <footer>
    </footer>
  </Page>
</mvc:View>