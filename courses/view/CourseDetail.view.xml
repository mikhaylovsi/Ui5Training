<mvc:View
  height="100%"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="view.CourseDetail">

  <Page
    title="Подробная информация о курсе">
    <headerContent>
    </headerContent>
    <subHeader>
    </subHeader>
    <content>

        <IconTabBar
    class="iconTabBarPaddingTop"
    id="idIconTabBarNoIcons"
    expanded="{device>/isNoPhone}">
    <items>
      <IconTabFilter
        id="descriptionformContainer"
        text="Описание">
      </IconTabFilter>
      <IconTabFilter
        text="Программа">

         <Table id="tableExercise"
                inset="false"
                items="{Exercises}">
                <columns> 
                  <Column 
                    width="8em"> <Text text="№" />
                  </Column>
                  <Column 
                    width="8em"> <Text text="Название" />
                  </Column>
                  <Column 
                    width="8em"> <Text text="Описание" />
                  </Column>
                  <Column 
                    width="8em"> <Text text="Длительность" />
                  </Column>
                </columns>

                <items>
                  <ColumnListItem>
                    <cells>
                      <Text
                        text="{Number}" />
                      <Text
                        text="{Name}" />
                      <Text
                        text="{ShortDescription}" />
                      <Text
                        text="{Duration}" />
                    </cells>
                  </ColumnListItem>
                </items>
         </Table>
         
      </IconTabFilter>
    </items>
  </IconTabBar>

    </content>
    <footer>
      <Bar>
        <contentRight>
          <Button text="{i18n>addToMyCourses}" press="handleAddToMyCourses"  />
          <!-- TODO editable
            <Button id="idButtonEdit" text="Edit" visible="false" press="handleFooterBarButtonPress"  />
            <Button id="idButtonSave" text="Save" type="Emphasized" visible="false" press="handleFooterBarButtonPress" />
            <Button id="idButtonCancel" text="Cancel" visible="false" press="handleFooterBarButtonPress" />
           -->
        </contentRight>
      </Bar>
    </footer>
  </Page>
  
</mvc:View>